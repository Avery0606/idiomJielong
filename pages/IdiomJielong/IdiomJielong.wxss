/* pages/IdiomJielong/IdiomJielong.wxss */
.bodyMain{
  width: 100%;
  padding-top:1rem;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.idiomMain{
  overflow: auto;
  width:90%;
  height:75vh;
}
.idiomInput{
  margin-top:.5rem;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-around;
}
.idiomInput input{
  border-bottom:1px solid rgb(144,128,128);
}

.idiomInput text{
  font-family: Arial, Helvetica, sans-serif;
  font-weight: bold;
  color:rgb(0, 255, 0);
  width: 1rem;
}
.bottomView{
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
  position: fixed;
  z-index: 2;
  background-color: white;
  width:100%;
  height:20%;
  bottom:0;
}
.giveUp{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 5rem;
  width: 5rem;
  color:#ffffff;
  background-color: red;
  border-radius: 50%;
  font-weight: bold;
  font-size:1.5rem;
  border:.7rem solid yellow;
}
#topTips{
  position: fixed;
  top:-2.5rem;
  color: #ffffff;
  background-color: rgb(244,88,89);
  z-index: 2;
  width:80%;
  display: flex;
  justify-content: center;
  border-radius: 5%;
  border:1px solid black;
  padding:.2rem;
}